<%- include('partials/header.ejs'); %>
<h1>Compose</h1>
<div class="container">
    <div class="row">
        <form action="/compose" method="POST">
            <div class="col">
                <label>Title</label>
            </div>
            <div class="col">
                <input class="form-control" name="postTitle" type="text">
            </div>
            <div>
                <label>Post</label>
            </div>
            <div class="col">
                <textarea class="form-control" name="post" cols="140" rows="10"></textarea>
            </div>
            <div class="col">
                <button class="btn btn-primary" style="margin-top:1rem;" name="publish" type="submit">Publish</button>
            </div>
        </form>
    </div>
</div>
</div>
<%- include('partials/footer.ejs'); %>